<section class="section">

  <h2 class="has-text-centered">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: 'label is-large' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input is-large' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :user_name, class: 'label is-large' %><br />
      <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name", class: 'input is-large' %>
    </div>

    <div class="field">
      <%= f.label :first_name, class: 'label is-large' %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'input is-large' %>
    </div>

    <div class="field">
      <%= f.label :last_name, class: 'label is-large' %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'input is-large' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'label is-large' %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'input is-large' %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'label is-large' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input is-large' %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: 'label is-large' %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'input is-large' %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: 'input button is-large is-success' %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'input button is-large is-danger' %></p>

  <%= link_to "Back", :back, class: 'input button is-large is-primary' %>

</section>